# Ambiente
NODE_ENV=development
PORT=3001

# Banco de Dados - MongoDB Atlas
# Formato: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
# ⚠️ Substitua <username>, <password>, <cluster> e <database> com seus valores
# ⚠️ Se a senha tiver caracteres especiais, faça URL encode (ex: @ vira %40)
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/eletrostart?retryWrites=true&w=majority"

# JWT - Gere uma chave segura para produção
JWT_SECRET="sua-chave-secreta-muito-segura-aqui-mude-em-producao"
JWT_EXPIRES_IN="7d"

# Discord Bot (Novo)
DISCORD_BOT_TOKEN="seu-token-do-bot-aqui"
DISCORD_CLIENT_ID="seu-client-id-aqui"
DISCORD_GUILD_ID="seu-guild-id-opcional-para-dev"
DISCORD_CHANNEL_ID="id-do-canal-para-notificacoes"

# Discord Webhook (Legado/Backup)
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/..."

# Admin padrão - Mude a senha em produção!
ADMIN_EMAIL="admin@eletrostart.com.br"
ADMIN_PASSWORD="Admin@123"

# Frontend URL (para CORS)
FRONTEND_URL="http://localhost:5173"
